generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pedido {
  id            Int    @id @default(autoincrement())
  nombre        String
  fecha_pedido  DateTime
  fecha_entrega DateTime?
  total         Int
  estado        String

  contenido Contenido[]
}

model Contenido {
  id       Int    @id @default(autoincrement())
  cantidad Int
  producto String
  precio_u Int
  subtotal  Int
  pedido   Pedido @relation(fields: [pedidoId], references: [id])
  pedidoId Int
}
